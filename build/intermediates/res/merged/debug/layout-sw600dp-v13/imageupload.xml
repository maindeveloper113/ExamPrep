            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.1"
            android:paddingLeft="8dp"
            android:text="S.N."
            android:textColor="@color/btnall_text_color" />

        <TextView
