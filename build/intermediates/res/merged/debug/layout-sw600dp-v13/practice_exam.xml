<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/all_page_background"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/title_back_color"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tbl600_title_headr_size"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_logout"
            android:gravity="center"
            android:text="Demo Practice Test"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/tbl600_title_text_size" />

        <Button
            android:id="@+id/btn_logout"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/icon_logout" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_demo_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/textlines"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/edittext_hint_color"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/txt_class_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="@drawable/textlines"
            android:gravity="center"
            android:text="-"
            android:textColor="@color/edittext_hint_color"
            android:textSize="30dp" />

        <ListView
            android:id="@+id/lst_demo_practice_exam"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:visibility="gone" >
        </ListView>
    </LinearLayout>

</LinearLayout>